<%# Hero Section %>
<section class="hero-section">
  <div class="container">
    <h1>おしゃれなカフェで、素敵な時間を。</h1>
    <div class="search-bar">
      <%= form_with(url: search_path, method: :get, local: true, class: "form-inline") do %>
        <%= text_field_tag :query, params[:query], class: "form-control form-control-lg", placeholder: "カフェを検索..." %>
        <%= submit_tag "検索", class: "btn btn-primary ml-2" %>
      <% end %>
    </div>
  </div>
</section>

<%# Recommended Cafes %>
<section class="container my-5">
  <h2 class="text-center mb-4">おすすめカフェ</h2>
  <div class="row">
    <% @recommended_cafes.each do |cafe| %>
      <div class="col-md-4 cafe-thumbnail">
        <div class="card">
          <%= image_tag cafe.images.attached? ? cafe.images.first : 'no_image.jpg', class: "card-img-top", alt: cafe.name %>
          <div class="card-body">
            <h5 class="card-title"><%= cafe.name %></h5>
            <p class="card-text">評価: <%= pluralize(cafe.reviews.average(:rating).to_i, '★') %></p>
            <%= link_to '詳細を見る', cafe_path(cafe), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<%# Latest Reviews %>
<section class="container my-5">
  <h2 class="text-center mb-4">新着レビュー</h2>
  <div class="row">
    <% @latest_reviews.each do |review| %>
      <div class="col-md-4 review-summary">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= review.cafe.name %></h5>
            <p class="card-text">「<%= review.content.truncate(100) %>」</p>
            <p class="card-text">評価: <%= pluralize(review.rating, '★') %></p>
            <%= link_to '詳細を見る', cafe_path(review.cafe), class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>

<%# Popular Tags %>
<section class="container my-5">
  <h2 class="text-center mb-4">人気のタグ</h2>
  <div class="d-flex flex-wrap justify-content-center">
    <% @popular_tags.each do |tag| %>
      <%= link_to tag.name, search_path(tag: tag.name), class: 'badge badge-primary m-2' %>
    <% end %>
  </div>
</section>

