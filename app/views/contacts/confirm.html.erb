<h1>お問い合わせ確認</h1>

<%= simple_form_for @contact, url: contacts_complete_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.input :name, label: "お名前", readonly: true %>
  </div>
  <div class="form-group">
    <%= f.input :email, label: "メールアドレス", readonly: true %>
  </div>
  <div class="form-group">
    <%= f.input :subject, label: "件名", readonly: true %>
  </div>
  <div class="form-group">
    <%= f.input :message, label: "メッセージ", as: :text, readonly: true %>
  </div>
  <div class="actions">
    <%= f.button :submit, "送信", class: "btn btn-primary" %>
  </div>
  <div class="actions">
    <%= link_to '修正する', new_contact_path, class: 'btn btn-secondary' %>
  </div>
<% end %>