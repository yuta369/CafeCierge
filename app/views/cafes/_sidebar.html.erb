<div class="search-sidebar">
  <h4>検索条件</h4>
  <%= form_with url: cafes_path, method: :get, local: true, class: "search-form" do %>
    <div class="form-group">
      <%= label_tag :name, "カフェ名" %>
      <%= text_field_tag :name, params[:name], class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :tag, "タグ" %>
      <%= select_tag :tag, options_for_select(Tag.pluck(:name, :id), params[:tag]), include_blank: true, class: "form-control" %>
    </div>

    <%= submit_tag "検索", class: "btn btn-primary" %>
  <% end %>
</div>